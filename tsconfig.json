{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "lib": ["es2023"],
    "target": "es2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  },
  "include": ["src/**/*.ts"]
}
